{
  "openapi": "3.0.0",
  "info": {
    "title": "RentPG documentation",
    "description": "Car Rent service API",
    "version": "1.0.0",
    "contact": {
      "email": "pedro.gomes@poli.ufrj.br"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Category"
        ],
        "summary": "Create category",
        "description": "Insert a new category in the database",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category Example Name",
                  "description": "This is an description example for CategoryExampleName"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": [
          "Category"
        ],
        "summary": "Get Categories",
        "description": "List all categories registered in the database",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "name": "Category name 1",
                      "description": "Category description 1"
                    },
                    {
                      "name": "Category name 2",
                      "description": "Category description 2"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}